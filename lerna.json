{
  "packages": ["packages/*"],
  "version": "independent",
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %v",
      "npmClient": "npm",
      "registry": "https://registry.npmjs.org/"
    }
  },
  "npmClient": "yarn"
}
